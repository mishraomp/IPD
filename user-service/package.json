{
  "name": "ipd-login-service",
  "version": "1.0.0",
  "description": "this deals with login functionality for IPD UI",
  "main": "./dist/server.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "start": "node ./dist/server.js",
    "debug-app-local": "npm run swagger-gen && npm run watch && nodemon --nolazy --inspect=0.0.0.0:9222 ./dist/server.js",
    "swagger-gen": "tsoa swagger && tsoa routes"
  },
  "nodemonConfig": {
    "watch": [
      "./dist"
    ],
    "verbose": true,
    "legacyWatch": true,
    "ext": "js"
  },
  "author": "omprakash mishra",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.196.0",
    "bunyan": "^1.8.12",
    "bunyan-rotating-file-stream": "^1.6.3",
    "class-transformer": "^0.1.8",
    "class-transformer-validator": "^0.4.0",
    "class-validator": "^0.7.3",
    "csv": "^2.0.0",
    "csv-parse": "^2.0.0",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "inversify": "^4.10.0",
    "method-override": "^2.3.6",
    "nconf": "^0.10.0",
    "nodemon": "^1.17.5",
    "pg-promise": "^8.2.2",
    "reflect-metadata": "^0.1.12",
    "swagger-ui-express": "latest"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/express": "^4.11.0",
    "@types/nconf": "^0.0.37",
    "@types/node": "^9.4.6",
    "@types/uuid": "^3.4.3",
    "@types/jest": "^22.2.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2",
    "node-mocks-http": "^1.6.6",
    "tsoa": "^2.0.2",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1"
  }
}
